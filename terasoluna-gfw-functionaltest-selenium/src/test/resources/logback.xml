<!DOCTYPE logback>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tthread:%thread\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-48logger{48}\tmessage:%msg%n]]></pattern>
        </encoder>
    </appender>

    <appender name="APPLICATION_LOG_FILE"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${gfw.app.log.dir:-log}/terasoluna-gfw-functionaltest-application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${gfw.app.log.dir:-log}/backup/terasoluna-gfw-functionaltest-application-%d{yyyyMMdd}.log
            </fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tthread:%thread\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-48logger{48}\tmessage:%msg%n]]></pattern>
        </encoder>
    </appender>

    <logger name="org.terasoluna.gfw.functionaltest">
        <level value="debug" />
    </logger>

    <logger name="org.terasoluna.gfw.functionaltest.domain.DBLogCleaner" additivity="false">
        <appender-ref ref="APPLICATION_LOG_FILE" />
    </logger>

    <logger name="com.gargoylesoftware.htmlunit.DefaultCssErrorHandler" additivity="false">
        <appender-ref ref="APPLICATION_LOG_FILE" />
    </logger>

    <logger name="com.gargoylesoftware.htmlunit.javascript.StrictErrorReporter" additivity="false">
        <appender-ref ref="APPLICATION_LOG_FILE" />
    </logger>

    <root level="warn">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLICATION_LOG_FILE" />
    </root>

</configuration>
